<% include ../partials/header %>

<div class="container">
    
    <div class="row">
        <h2 class="text-center">Edit Comment to <%= comment.museum.museumname %></h2>
        <div class="input-form">
           
            <form class = "sodirty"
                  action="/museums/<%= comment.museum.id %>/comments/<%= comment._id %>?_method=PUT" 
                  method="POST">
                <div class="form-group">
                     <textarea class="form-control" 
                               rows=5 
                               name ="comment[content]"
                               required>
                         <%= comment.content %></textarea>
                </div>
               
                <div class="form-group">
                      <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/museums/<%= comment.museum._id%>"><i class="fa fa-reply-all"></i> Go Back</a>
        </div>
      
    </div>
    
</div>

<% include ../partials/footer %>