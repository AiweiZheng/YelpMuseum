<% include ../partials/header %>

<div class="container">
    
    <div class="row">
        <h2 class="text-center">Add New Comment to <%= museum.name %></h2>
        <div class="input-form">
           
            <form class="sodirty" 
                  action="/museums/<%= museum._id %>/comments" method="POST">
                <div class="form-group">
                     <textarea class="form-control" 
                               rows=5 
                               name ="comment[content]" 
                               placeholder="Comment"
                               required></textarea>
                </div>
               
                <div class="form-group">
                      <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/museums/<%= museum._id%>"><i class="fa fa-reply-all"></i> Go Back</a>
        </div>
      
    </div>
    
</div>

<% include ../partials/footer %>