<% include ./partials/header %>

 <div class = "row">
        <h2 class = "text-center">Login</h2>
        <div class = "input-form">
            <form action = "/login" method="POST" >
                  <div class = "form-group"> 
                       <!--MUST make "name="username"" in order to use passport authentication-->
                       <input class = "form-control" 
                              type ="text" 
                              name = "username" 
                              placeholder = "Username"
                              Required>
                  </div>
                   <div class = "form-group">
                        <!--MUST make "name = "password"" in order to use passport authentication-->
                       <input class = "form-control" 
                              type = "password" 
                              name = "password" 
                              placeholder = "Password"
                              required>
                   </div>
                   <div class = "form-group">
                        <button class = "btn btn-lg btn-primary btn-block">
                            Submit
                        </button>
                   </div>
              </form>
              <a href = "/museums"><i class="fa fa-reply-all"></i> Go Back</a>
        </div>
    </div>
