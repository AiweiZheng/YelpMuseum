<% include ../partials/header %>
    <div class = "row">
        <h2 class = "text-ceneter">Edit <%= museum.name %></h2>
        <div class = "input-form">
            <form class="sodirty" action="/museums/<%= museum._id%>?_method=PUT" method="POST">
                  <div class="form-group">
                      <label>Name</label>
                     <input 
                         class="form-control" 
                         type="text" 
                         name ="museum[name]" 
                         value= "<%= museum.name %>"
                         required>
                </div>
                 <div class="form-group">
                     <label>Price</label>
                     <input 
                         class="form-control" 
                         type="number" 
                         name ="museum[price]" 
                         value="<%= museum.price %>"
                         min="0.00" 
                         step="0.01"
                         required>
                </div>
                <div class="form-group">
                     <label>Image Url</label>
                     <input 
                     class="form-control" 
                     type="text" 
                     name ="museum[image]" 
                     value="<%= museum.image %>"
                     required>
                </div>
                <div class="form-group">
                     <label>Description</label>
                     <textArea class="form-control" 
                               name ="museum[description]">
                         <%= museum.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-lg btn-block">
                        Submit
                    </button>
                </div>
            </form>
            <a href="/museums/<%= museum._id %>">
                <i class="fa fa-reply-all"></i> 
               Go Back
            </a>
        </div>
    </div>
<% include ../partials/footer %>