<% include ../partials/header %>
    <div class = "row">
        <h1 class = "text-ceneter">Edit Museum</h1>
        <div class = "input-form">
            <form action="/museums/<%= museum._id%>?_method=PUT" method="POST">
                  <div class="form-group">
                     <input 
                         class="form-control" 
                         type="text" 
                         name ="museum[name]" 
                         value= "<%= museum.name %>">
                </div>
                 <div class="form-group">
                     <input 
                         class="form-control" 
                         type="number" 
                         name ="museum[price]" 
                         value="<%= museum.price %>"
                         min="0.01" 
                         step="0.01">
                </div>
                <div class="form-group">
                     <input 
                     class="form-control" 
                     type="text" 
                     name ="museum[image]" 
                     value="<%= museum.image %>">
                </div>
                <div class="form-group">
                     <input 
                         class="form-control" 
                         type="text" 
                         name ="museum[description]" 
                         value="<%= museum.description %>">
                </div>
                <div class="form-group">
                      <button class="btn btn-primary btn-lg btn-block">Submit!</button>
                </div>
            </form>
            <a href="/museums/<%= museum._id %>"><i class="fa fa-reply-all"></i> Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>