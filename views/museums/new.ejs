<% include ../partials/header %>
    <div class="row">
        <h2  class = "text-center">Add a New Museum</h2>
        <div  class = "input-form">
           
            <form class="sodirty"
                  action="/museums" method="POST">
                <div class="form-group">
                     <label>Name</label>
                     <input class="form-control" 
                            type="text" 
                            name ="name" 
                            placeholder="Musee du Louvre"
                            required>
                </div>
                 <div class="form-group">
                     <label>Price</label>
                     <input class="form-control" 
                            type="number" 
                            name ="price" 
                            placeholder="price" 
                            min="0.00" 
                            value="30.29"
                            step="0.01"
                            required>
                </div>
                <div class="form-group">
                     <label>Image Url</label>
                     <input class="form-control" 
                            type="text" 
                            name = "image" 
                            placeholder="https://media-cdn.tripadvisor.com/media/photo-s/06/49/e6/2b/louvren.jpg"
                            required>
                </div>
                <div class="form-group">
                     <label>Description</label>
                     <textarea class="form-control" 
                                rows=5 
                                name = "description" 
                                placeholder="Home to Leonardo da Vinci's Mona Lisa, the Louvre is considered the world's greatest art museum, with an unparalleled collection of items covering the full spectrum of art through the ages."></textarea>
                </div>
                <div class="form-group">
                     <button class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
            <a href="/museums"><i class="fa fa-reply-all"></i> Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>